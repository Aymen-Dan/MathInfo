                        <Button fx:id="graph3ButtonChoice" mnemonicParsing="false" onAction="#handleChooseGraph3Action" prefHeight="67.0" prefWidth="220.0" text="Graph 3" />
                        <Button fx:id="graph4ButtonChoice" mnemonicParsing="false" onAction="#handleChooseGraph4Action" prefHeight="67.0" prefWidth="232.0" text="Graph 4" />
                        <Button fx:id="graph5ButtonChoice" mnemonicParsing="false" onAction="#handleChooseGraph5Action" prefHeight="67.0" prefWidth="236.0" text="Graph 5" />


                    </children>
                </VBox>


            </children>
        </AnchorPane>

        <Button fx:id="returnButton" layoutX="24.0" layoutY="350.0" onAction="#handleReturnButtonAction"  mnemonicParsing="false" prefHeight="29.0" prefWidth="150.0" text="Return" />

    </children>



</AnchorPane>


