<!--this FXML is for the panel with the equation choice buttons. from here every equation-choice-button initiates the graph FXML to create a new window with the graph itself -->

<AnchorPane fx:id="rootPane" maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" styleClass="root" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group.mathinfo.ChoiceButtonsController">


    <children>
        <!--buttons-->
        <AnchorPane layoutX="416.0" minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="185.0">
            <children>
                <!--function buttons-->
                <VBox prefHeight="398.0" prefWidth="183.0">
                    <children>
                        <Button fx:id="graph1ButtonChoice" mnemonicParsing="false" onAction="#handleChooseGraph1Action" prefHeight="66.0" prefWidth="193.0" text="Diocles Cissoid" />
